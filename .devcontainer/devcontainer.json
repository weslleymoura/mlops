{
  "name": "MLflow Study Lab",
  "image": "mcr.microsoft.com/devcontainers/python:1-3.13",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [
    9000,
    9001,
    5000,
    5433
  ],
  "postCreateCommand": "python -m venv mlops-util-env && . mlops-util-env/bin/activate && pip install --upgrade pip && chmod +x scripts/start-services.sh scripts/stop-services.sh",
  "postStartCommand": "bash scripts/start-services.sh",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/mlops-util-env/bin/python",
        "python.linting.enabled": true,
        "python.linting.pylintEnabled": true,
        "python.formatting.provider": "black",
        "editor.formatOnSave": true,
        "files.autoSave": "afterDelay",
        "python.terminal.activateEnvironment": true
      }
    }
  }
}